<%- include('templates/header') %>

<div class="container">
  <h1>Rooms</h1>

  <h2>Create a new room</h2>
  <form action="/rooms" method="post">
    <label>
      Room name
      <input type="text" name="name">
    </label>

    <button type="submit">Create</button>
  </form>

  <h2>Rooms list</h2>
  <ul>
    <% rooms.forEach((room) => { %>
    <li><a href="/rooms/<%= room.id %>"><%= room.name %></a></li>
    <% }); %>
  </ul>
</div>

<%- include('templates/footer') %>
